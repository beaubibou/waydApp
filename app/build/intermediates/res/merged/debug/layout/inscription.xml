<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondwaydblancxxxhdpi"
    >


    
    <TextView
        android:id="@+id/suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="@dimen/paddingTextview2"
        android:text="@string/inscription_rejoignez"
        android:textStyle="normal|bold"
        android:textSize="@dimen/texte3"
        android:background="#FFD440"
        android:textColor="#fff"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="@dimen/marge1"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:padding="@dimen/paddingEditTextSingle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <EditText
            android:padding="@dimen/paddingEditTextSingle"
            android:id="@+id/id_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inscription_hint_mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/texte2" />

        <EditText
            android:id="@+id/id_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inscription_hint_mdp"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/paddingEditTextSingle"
            android:textSize="@dimen/texte1" />

        <EditText
            android:padding="@dimen/paddingEditTextSingle"
            android:id="@+id/id_pwdconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inscription_hint_confirmmdp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textSize="@dimen/texte1" />

        <CheckBox
            android:layout_marginTop="@dimen/marge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inscription_ck_mdp"
            android:id="@+id/id_affmdp"
            android:textSize="@dimen/texte2" />

        <Button
            android:id="@+id/id_creercompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marge4"
            android:layout_marginRight="@dimen/marge4"
            android:layout_marginTop="@dimen/marge4"
            android:background="#ffa440"
            android:gravity="center"
            android:padding="@dimen/paddingButton"
            android:text="@string/inscription_button_inscription"
            android:textColor="#000000"
            android:textSize="@dimen/texte2" />


    </LinearLayout>




</RelativeLayout>
