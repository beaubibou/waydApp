<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/paddingTextview1"
                android:text="Professionel"
                android:textStyle="normal|bold"
                android:textSize="@dimen/texte3"

                />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTextview1"
                android:textSize="@dimen/texte3"
                tools:text="TÃ©l:"

                />

            <TextView
                android:id="@+id/siret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTextview1"
                android:textSize="@dimen/texte3"
                android:visibility="gone"
                tools:text="Siret"

                />

            <TextView
                android:id="@+id/adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTextview1"
                android:textSize="@dimen/texte3"
                tools:text="Adresse:" />

            <TextView
                android:id="@+id/descriptionprofil"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/boutonaction"
                android:layout_margin="15dp"
                android:background="@drawable/borduretextfondblanc"
                android:padding="@dimen/paddingTextview2"
                android:scrollbars="vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/texte2"
                tools:text="Description profil" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
