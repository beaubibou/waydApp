<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="appbar_padding_top">8dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="marge0">80dp</dimen>
    <dimen name="marge1">60dp</dimen>
    <dimen name="marge2">40dp</dimen>
    <dimen name="marge3">20dp</dimen>
    <item name="mr_dialog_fixed_width_major" type="dimen">50%</item>
    <item name="mr_dialog_fixed_width_minor" type="dimen">70%</item>
    <dimen name="paddingButton">15dp</dimen>
    <dimen name="paddingSpinner">30dp</dimen>
    <dimen name="photo0">210dp</dimen>
    <dimen name="photo1">160dp</dimen>
    <dimen name="photo2">120dp</dimen>
    <dimen name="photo3">60dp</dimen>
    <dimen name="titre1">28dp</dimen>
    <dimen name="titre2">18dp</dimen>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


        <!--
           For the resting Spinner style
          <item name="android:spinnerItemStyle">
              @style/spinnerItemStyle
          </item>

           For each individual Spinner list item once clicked on
          <item name="android:spinnerDropDownItemStyle">
              @style/spinnerDropDownItemStyle
          </item>
  -->
<!-- Espance des menus du drawer et des liste par défaut-->
        <item name="android:listPreferredItemHeightSmall">72dp</item>


    </style>
    <style name="MenuItems" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>

    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ThemeEditTextLight">
        <!-- Coleur de la ligne sous l'edit text quand non selectionné -->
        <item name="colorControlNormal">#BDBDBD</item>
        <!-- text color -->
        <item name="android:textColor">#000000</item>
        <!-- hint text color
        <item name="android:textColorHint">#FF0000</item>
         -->
    </style>
    <style name="ThemeOverlay.AppCompat.navTheme">
       <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#000000</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#fff</item>

    </style>
    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>