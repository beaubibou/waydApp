<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#FFFFFF"
    android:padding="10dp"
    android:theme="@style/AppBaseTheme"
    >
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


            <TextView
                android:text="@string/s_signaleramelioration_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/suggestion"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/texte2"/>




            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/s_signaleramelioration_aideznous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titreactivite"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/texte2"/>


            <EditText

                android:id="@+id/listesouci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="39dp"
                android:background="@drawable/borduretextfondblanc"
                android:gravity="left"
                android:hint="@string/s_signaleramelioration_hintchamplibre"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:lines="12"
                android:maxLength="300"
                android:maxLines="12"
                android:padding="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/texte2" />

            <Button
                android:id="@+id/validersuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marge4"
                android:layout_marginRight="@dimen/marge4"
                android:background="#ffa740"
                android:padding="@dimen/paddingButton"
                android:text="@string/s_signaleramelioration_buttonvalider"
                android:textSize="@dimen/texte2"
                android:layout_marginTop="@dimen/marge3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />



    </LinearLayout>

</ScrollView>
</RelativeLayout>