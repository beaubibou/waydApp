<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffd440"
    android:layout_marginBottom="@dimen/marge1"

    >

    <TextView
        android:id="@+id/signalerprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="@dimen/paddingTextview1"
        android:layout_marginRight="@dimen/marge1"
        android:text="@string/s_unprofil_signaler"
        android:textColor="@color/com_facebook_blue"
        android:textSize="@dimen/texte2"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView

        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_photo"
        android:layout_gravity="center"
        android:padding="@dimen/paddingTextview1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
        android:textSize="@dimen/texte2"
        tools:text="TextView" />

    <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iconactivite"
                    android:layout_width="@dimen/photo3"
                    android:layout_height="@dimen/photo3"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"
                    android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marge1"
                    />




</LinearLayout>