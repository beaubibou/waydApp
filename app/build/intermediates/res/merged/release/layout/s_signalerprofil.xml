<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#fff"
    android:padding="10dp"
    android:theme="@style/AppBaseTheme">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/s_signalerprofil_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signalerprofil"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_marginTop="10dp"
            tools:text="Vous souhaitez signaler NomDuProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titreprofil"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="@string/s_signalerprofil_quesepassetil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">





                <TextView
                    android:drawableRight="@mipmap/ic_next"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/borduretextfondblanc"
                    android:layout_height="60dp"
                    android:text="@string/s_signalerprofil_harcele"
                    android:layout_width="match_parent"
                    android:id="@+id/harcele"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/imgfleche1"
                    android:layout_toStartOf="@+id/imgfleche1" />





                <TextView
                    android:drawableRight="@mipmap/ic_next"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/borduretextfondblanc"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="@string/s_signalerprofil_proposincorrect"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/insultant"
                    android:gravity="left|center"

                    android:textAllCaps="false"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_toLeftOf="@+id/imgfleche2"
                    android:layout_toStartOf="@+id/imgfleche2" />




                <TextView
                    android:drawableRight="@mipmap/ic_next"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/borduretextfondblanc"
                     android:text="@string/s_signalerprofil_entreprise"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/entreprise"
                    android:gravity="left|center"
                     android:textAllCaps="false"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
/>
                <TextView
                    android:drawableRight="@mipmap/ic_next"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/borduretextfondblanc"
                    android:text="@string/s_signalerprofil_autres"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/autre"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                   />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>