<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:background="#FFD440">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/apropos_pourandroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/texte2"/>

        <TextView
            android:text="@string/apropos_marques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"
            android:textSize="@dimen/texte2"/>

        <TextView
            android:text="@string/apropos_logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_below="@+id/version"
            android:layout_alignLeft="@+id/version"
            android:layout_alignStart="@+id/version"
            android:layout_marginTop="63dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"
            android:textSize="@dimen/texte2"/>

        <TextView
            tools:text="Version de l'application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/version"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textSize="@dimen/texte2"/>

        <TextView
            android:text="@string/apropos_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"
            android:layout_above="@+id/version"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:textStyle="normal|bold"
            android:textSize="@dimen/texte2"
            />

        <TextView
            android:text="@string/apropos_waydcommunty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="89dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:textSize="@dimen/texte2"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:id="@+id/rl_pasdecompte2"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp">

            <TextView
                android:id="@+id/cgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:background="#FFD440"
                android:text="@string/apropos_conditions"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#FFF"
                android:textStyle="normal|bold"
                android:textSize="@dimen/texte2"

                />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>