<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

      android:theme="@style/AppBaseTheme"
    >

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:padding="@dimen/paddingTextview2"
            android:text="@string/signalerbug_prbconnexion"
            android:textStyle="normal|bold"
            android:textSize="@dimen/texte3"
            android:background="#FFD440"
            android:textColor="#fff"/>

        <TextView
            android:layout_marginRight="@dimen/marge2"
            android:layout_marginLeft="@dimen/marge2"
            android:id="@+id/titreactivite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marge2"
            android:padding="@dimen/paddingTextview1"
            android:text="@string/signalerbug_texteinfo"
            android:textSize="@dimen/texte3" />


        <EditText
            android:layout_marginRight="@dimen/marge2"
            android:layout_marginLeft="@dimen/marge2"
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingTextview1"
            android:hint="@string/signalerbug_hintmail"
            android:inputType="textEmailAddress"
            android:maxLines="1"

            android:textSize="@dimen/texte2" />


        <EditText

            android:layout_marginRight="@dimen/marge2"
            android:layout_marginLeft="@dimen/marge2"
            android:id="@+id/listesouci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marge1"
            android:background="@drawable/borduretextfondblanc"
            android:gravity="left"
            android:maxLength="250"
            android:hint="@string/signalerbug_hintchamplibre"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="8"
            android:padding="@dimen/paddingEditTextSingle"
            android:textSize="@dimen/texte2" />

        <Button
            android:id="@+id/validersuggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marge4"
            android:layout_marginRight="@dimen/marge4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marge3"
            android:background="#ffa740"
            android:padding="@dimen/paddingButton"
            android:text="@string/signalerbug_buttonvalider"
            android:textSize="@dimen/texte2"
            />

    </LinearLayout>
   </ScrollView>
 </RelativeLayout>


</RelativeLayout>