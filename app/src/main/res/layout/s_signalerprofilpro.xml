<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#fff"
    android:padding="10dp"
    android:theme="@style/AppBaseTheme">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/s_signalerprofil_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signalerprofil"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="@dimen/texte3"/>

        <TextView
            android:layout_marginTop="10dp"
            tools:text="Vous souhaitez signaler NomDuProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titreprofil"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="@dimen/texte2"/>

        <TextView
            android:layout_marginTop="5dp"
            android:text="@string/s_signalerprofil_quesepassetil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:textSize="@dimen/texte2" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText

                android:layout_marginRight="@dimen/marge2"
                android:layout_marginLeft="@dimen/marge2"
                android:id="@+id/listesouci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marge1"
                android:background="@drawable/borduretextfondblanc"
                android:gravity="left"
                android:maxLength="250"
                android:hint="@string/signalerbug_hintchamplibre"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="8"
                android:padding="@dimen/paddingEditTextSingle"
                android:textSize="@dimen/texte2" />

            <Button
                android:id="@+id/validersuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marge4"
                android:layout_marginRight="@dimen/marge4"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/marge3"
                android:background="#ffa740"
                android:padding="@dimen/paddingButton"
                android:text="@string/signalerbug_buttonvalider"
                android:textSize="@dimen/texte2"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>