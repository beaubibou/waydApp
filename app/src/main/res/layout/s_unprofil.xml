<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffd440"
        android:layout_marginTop="1dp"
        android:id="@+id/relativeLayout2">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/rlsexeage">

                <TextView
                    android:layout_marginRight="5dp"
                    tools:text="age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    android:id="@+id/age"
                    android:layout_weight="1" />

                <TextView
                    android:layout_marginLeft="5dp"
                    tools:text="sexe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:id="@+id/sexe"

                    android:layout_weight="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_photo"
                android:layout_above="@+id/rlsexeage"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iconactivite"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@android:color/holo_blue_dark"
                    android:progressBackgroundTint="@android:color/holo_blue_dark"
                    android:secondaryProgressTint="@android:color/holo_blue_dark"
                    android:id="@+id/noteprofil"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_below="@+id/iconactivite"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <TextView
                android:layout_margin="10dp"
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pseudo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                android:layout_above="@+id/rl_photo"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/titre1"/>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/signalerprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_unprofil_signaler"
        android:visibility="invisible"
        android:textColor="@color/com_facebook_blue"
        android:textStyle="bold"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/titre1"/>

</RelativeLayout>