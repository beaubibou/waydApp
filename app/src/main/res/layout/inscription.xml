<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondwaydblancxxxhdpi"
    >
    <TextView

        android:background="#FFD440"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/inscription_rejoignez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_titreinscription"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="@dimen/titre1"
        android:textColor="#fff" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <EditText

            android:layout_marginTop="5dp"
            android:id="@+id/id_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:hint="@string/inscription_hint_mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/titre1" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/id_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:hint="@string/inscription_hint_mdp"
            android:inputType="textPassword"

            android:imeOptions="actionNext"
            android:textSize="@dimen/titre1" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/id_pwdconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:hint="@string/inscription_hint_confirmmdp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textSize="@dimen/titre1" />


        <CheckBox
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inscription_ck_mdp"
            android:id="@+id/id_affmdp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="@dimen/titre1" />

        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/id_creercompte"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#ffa440"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:text="@string/inscription_button_inscription"

            android:textSize="@dimen/titre1" />


    </LinearLayout>



</RelativeLayout>
