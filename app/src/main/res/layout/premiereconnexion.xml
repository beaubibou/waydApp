<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    >

    <RelativeLayout
        android:background="#ffd440"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="@string/premiereconnexion_bienvenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textSize="@dimen/titre1"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView

                android:text="@string/premiereconnexion_infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/titre1"
                android:textAllCaps="false" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/premiereconnexion_infopseudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_info"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/titre1" />

            <EditText

                android:id="@+id/pseudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:hint="@string/premiereconnexion_hintpseudo"
                android:maxLength="@string/maxLengtPseudo"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/titre1"
                android:textStyle="normal"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/premiereconnexion_datenaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/titre1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/datedenaissance"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/premiereconnexion_sexe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/version"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/titre1" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sexe"
                android:foregroundGravity="left"
                android:gravity="left|start"
                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/validepseudo"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#ffa440"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:text="@string/premiereconnexion_buttonconfirme"
                android:textSize="@dimen/titre1"/>


        </LinearLayout>

    </RelativeLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:id="@+id/expliquesexe"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="@string/premiereconnexion_infoscomplementaire"
        android:textStyle="normal|italic"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
