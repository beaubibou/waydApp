<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!--
           For the resting Spinner style
          <item name="android:spinnerItemStyle">
              @style/spinnerItemStyle
          </item>

           For each individual Spinner list item once clicked on
          <item name="android:spinnerDropDownItemStyle">
              @style/spinnerDropDownItemStyle
          </item>
  -->


    </style>


    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#000000</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#fff</item>

    </style>

    <!-- Ce style ThemeEditTextLight permet de solutionner  le probleme des editText sans soulignement dans l'api 22-->

    <style name="ThemeEditTextLight">
        <!-- Coleur de la ligne sous l'edit text quand non selectionné -->
        <item name="colorControlNormal">#BDBDBD</item>
        <!-- text color -->
        <item name="android:textColor">#000000</item>
        <!-- hint text color
        <item name="android:textColorHint">#FF0000</item>
         -->
    </style>

    <!--
    <style name="spinnerItemStyle">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/titre1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/titre1</item>
        <item name="android:textColor">#FF0000</item>
    </style>

-->
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">

        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Exemple De titre à appliquer avec textApparence-->
    <style name="titre1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/titre1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#00FF00</item>

    </style>

    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

